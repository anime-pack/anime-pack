{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "anime-pack",
  "version": "0.1.0",
  "identifier": "com.github.dark1zinn.animepack.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Anime Pack",
        "width": 1300,
        "height": 840,
        "minWidth": 1150,
        "minHeight": 730,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
